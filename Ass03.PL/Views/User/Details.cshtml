@model UserViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="form-group">
    <label asp-for="FName" class="col-form-label"></label>
    <input asp-for="FName" class="form-control"  readonly/>
</div>

<div class="form-group">
    <label asp-for="LName" class="col-form-label"></label>
    <input asp-for="LName" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="Email" class="col-form-label"></label>
    <input asp-for="Email" class="form-control" readonly />
</div>


<div class="form-group">
    <label asp-for="PhoneNumber" class="col-form-label"></label>
    <input asp-for="PhoneNumber" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="Roles" class="col-form-label"></label>
    <input asp-for="Roles" class="form-control" value="@string.Join(',',Model.Roles)" readonly />
</div>
