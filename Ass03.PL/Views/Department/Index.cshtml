@model IEnumerable<DepartmentViewModel>;
@{
    ViewData["Title"] = "Index";
}

@if(!string.IsNullOrEmpty(TempData["Messege"] as string))
{
    <h1 class="alert-primary"> @TempData["Messege"]</h1>
}
<h1>All Departments</h1>

<br />
<a asp-action="Create" class="mt-4 btn btn-primary">Create New Department</a>

<br />
<br />

@if (Model.Count() > 0)
{


    <div class="mt-4">
        <table class="table tabletable-striped table-hover">
            <thead>
                <tr>

                    <td>@Html.DisplayNameFor(D=>D.Name)</td>
                    <td>@Html.DisplayNameFor(D=>D.Code)</td>
                    <td>@Html.DisplayNameFor(D=>D.DateOfCreation.Year)</td>
                    <td> Details</td>
                    <td> Update </td>
                    <td> Delete </td>

                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model)
                {
                    <tr>
                        <td> @department.Code</td>
                        <td> @department.Name</td>
                        <td> @department.DateOfCreation.Year</td>
                        <partial name="_ButtonsPartial" model="@department.Id.ToString()" />
                      
                    </tr>

                }
            </tbody>
        </table>

    </div>

}
else
{
    <div class="mt-2 ">
        <h1>Thers is No Departments !</h1>
    </div>
}
